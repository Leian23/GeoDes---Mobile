<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="320dp"
    android:layout_height="170dp"
    android:layout_margin="1.5dp"
    app:cardBackgroundColor="#F3F3F3"
    app:cardCornerRadius="10dp"
    app:cardElevation="0dp"
    app:cardUseCompatPadding="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <TextView
            android:id="@+id/TimeSched"
            android:layout_width="152dp"
            android:layout_height="20dp"
            android:layout_marginEnd="104dp"
            android:layout_marginBottom="8dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="5 km"
            android:textSize="16dp"
            app:layout_constraintBottom_toTopOf="@+id/ScheduleSched"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/AlertDesc"
            android:layout_width="125dp"
            android:layout_height="20dp"
            android:layout_marginEnd="132dp"
            android:layout_marginBottom="36dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="5 km"
            android:textSize="16dp"
            app:layout_constraintBottom_toTopOf="@+id/ScheduleSched"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/ScheduleSched"
            android:layout_width="127dp"
            android:layout_height="20dp"
            android:layout_marginEnd="128dp"
            android:layout_marginBottom="24dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="No Schedule"
            android:textSize="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />


        <TextView
            android:id="@+id/TitleSetSched"
            android:layout_width="106dp"
            android:layout_height="44dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="180dp"
            android:alpha="0.7"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="School"
            android:textColor="@color/black"
            android:textSize="30dp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Switch
            android:id="@+id/AlertSwitch"
            android:layout_width="57dp"
            android:layout_height="34dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.129" />

        <ImageView
            android:id="@+id/AlarmIc"
            android:layout_width="25dp"
            android:layout_height="27dp"
            android:layout_marginTop="2dp"
            app:layout_constraintEnd_toStartOf="@+id/AlertDesc"
            app:layout_constraintHorizontal_bias="0.857"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/TitleSetSched"
            app:srcCompat="@drawable/alarm_ic" />

        <ImageView
            android:id="@+id/clockSchedIc"
            android:layout_width="24dp"
            android:layout_height="26dp"
            app:layout_constraintEnd_toStartOf="@+id/TimeSched"
            app:layout_constraintHorizontal_bias="0.827"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/AlarmIc"
            app:srcCompat="@drawable/clock_ic" />

        <ImageView
            android:id="@+id/calendarImage"
            android:layout_width="23dp"
            android:layout_height="21dp"
            android:layout_marginTop="4dp"
            android:layout_marginLeft="6dp"
            app:layout_constraintEnd_toStartOf="@+id/ScheduleSched"
            app:layout_constraintHorizontal_bias="0.727"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/clockSchedIc"
            app:srcCompat="@drawable/calendar_ic" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>