<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:background="@drawable/add_alert_bottom_sheet"
    android:orientation="vertical">

    <TextView
        android:id="@+id/txt_current_location"
        style="@style/TextAppearance.Compat.Notification"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="5dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="5dp"
        android:background="#D8D8D8"
        android:gravity="center_vertical"
        android:padding="8dp"
        android:paddingStart="30dp"
        android:text="Location"
        android:textAlignment="viewStart"
        android:textColor="#171717"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txt_expand_alert_near"
        style="@style/TextAppearance.Compat.Notification"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_current_location"
        android:layout_alignParentStart="true"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:background="#D8D8D8"
        android:gravity="center_vertical"
        android:paddingStart="30dp"
        android:text="Alert List"
        android:textAlignment="viewStart"
        android:textColor="#4C4C4C"
        android:textSize="20sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btn_emergency"
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/add_alert_bottom_sheet"
        android:backgroundTint="#F86161"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"
        android:text="Emergency"
        android:textColor="#DDDDDD"
        android:textSize="14sp"
        android:visibility="gone" />

    <Button
        android:id="@+id/btn_sos"
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/add_alert_bottom_sheet"
        android:backgroundTint="#F86161"
        android:text="SOS"
        android:textColor="#EAEAEA"
        android:textSize="14sp" />

</RelativeLayout>