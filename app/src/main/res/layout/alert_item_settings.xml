<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="320dp"
    android:layout_height="170dp"
    android:layout_margin="1.5dp"
    app:cardBackgroundColor="#F3F3F3"
    app:cardCornerRadius="10dp"
    app:cardElevation="0dp"

    app:cardUseCompatPadding="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <ImageView
            android:id="@+id/IconCal"
            android:layout_width="23dp"
            android:layout_height="22dp"
            android:layout_marginStart="18dp"

            android:layout_marginBottom="22dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/SchedsetAlert"
            app:layout_constraintHorizontal_bias="0.235"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/IconMarker"
            app:layout_constraintVertical_bias="1.0"
            app:srcCompat="@drawable/calendar_ic" />

        <TextView
            android:id="@+id/distanceLabel"
            android:layout_width="59dp"
            android:layout_height="20dp"
            android:layout_marginEnd="196dp"
            android:layout_marginBottom="8dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="5 km"
            android:textSize="18dp"
            app:layout_constraintBottom_toTopOf="@+id/SchedsetAlert"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/NoteSetAlert"
            app:layout_constraintVertical_bias="0.928" />

        <TextView
            android:id="@+id/SchedsetAlert"
            android:layout_width="127dp"
            android:layout_height="20dp"
            android:layout_marginEnd="128dp"
            android:layout_marginBottom="24dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="No Schedule"
            android:textSize="18dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <ImageView
            android:id="@+id/EntryImage"
            android:layout_width="62dp"
            android:layout_height="48dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="4dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/get_in" />


        <TextView
            android:id="@+id/TitleSetAlert"
            android:layout_width="106dp"
            android:layout_height="44dp"
            android:layout_marginTop="6dp"
            android:alpha="0.7"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="Alert#1"
            android:textColor="@color/black"
            android:textSize="30dp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/EntryImage"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/NoteSetAlert"
            android:layout_width="193dp"
            android:layout_height="34dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="-3dp"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="no notes"
            android:textSize="14dp"
            android:textStyle="italic"
            app:layout_constraintBottom_toTopOf="@+id/IconMarker"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/TitleSetAlert"
            app:layout_constraintVertical_bias="0.0" />

        <ImageView
            android:id="@+id/IconMarker"
            android:layout_width="16dp"
            android:layout_height="26dp"
            android:layout_marginStart="25dp"
            android:layout_marginBottom="47dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/distanceLabel"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="@drawable/pinalerts" />

        <Switch
            android:id="@+id/AlertSwitch"
            android:layout_width="57dp"
            android:layout_height="34dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.129" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>