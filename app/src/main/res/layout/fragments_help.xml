<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/fragment_container"
    android:background="@color/white">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical">

        <ImageButton
            android:id="@+id/menu_button"
            android:layout_width="60dp"
            android:layout_height="20dp"
            android:layout_gravity="start"
            android:layout_marginTop="24dp"
            android:background="?android:attr/selectableItemBackground"
            android:contentDescription="Menu"
            android:src="@drawable/menu_ic"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.045"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="76dp"
            android:layout_marginTop="19dp"
            android:text="Help and Tips"
            android:textSize="20dp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:text="Different ways for finding Points"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="30dp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="-30dp"
            android:gravity="center_horizontal"
            app:layout_constraintTop_toBottomOf="@+id/textView4">

            <ImageView
                android:id="@+id/landmarks"
                android:layout_width="130dp"
                android:layout_height="230dp"
                android:layout_marginTop="50dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/landmarks" />

            <ImageView
                android:id="@+id/crosshair"
                android:layout_width="130dp"
                android:layout_height="230dp"
                android:layout_marginLeft="-10dp"
                android:layout_marginTop="100dp"
                android:layout_marginRight="-10dp"
                app:layout_constraintStart_toEndOf="@+id/imageView13"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/crosshair" />

            <ImageView
                android:id="@+id/search"
                android:layout_width="130dp"
                android:layout_height="230dp"
                android:layout_marginTop="50dp"
                app:layout_constraintStart_toEndOf="@+id/imageView13"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/search_for" />


        </LinearLayout>

        <TextView
            android:id="@+id/textView5"
            android:layout_width="368dp"
            android:layout_height="46dp"
            android:layout_marginTop="500dp"
            android:text="select which among of options you can choose to select your drop off points "
            android:textAlignment="center"
            android:textColor="#808080"
            android:textSize="17dp"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="600dp"
            android:text="Set Your Alert With Ease"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="30dp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="400dp"
            android:gravity="center_horizontal"
            app:layout_constraintTop_toTopOf="@+id/linearLayout">



            <ImageView
                android:id="@+id/imageView15"
                android:layout_width="160dp"
                android:layout_height="290dp"
                android:layout_marginTop="136dp"
                app:layout_constraintStart_toEndOf="@+id/imageView13"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/drop_radius" />


        </LinearLayout>

        <TextView
            android:id="@+id/textView8"
            android:layout_width="366dp"
            android:layout_height="81dp"
            android:layout_marginTop="1000dp"
            android:text="Dropping a geofence on a selected schedule would generate a bottom sheet that will require necessary informations upon setup"
            android:textAlignment="center"
            android:textColor="#808080"
            android:textSize="17dp"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="1110dp"
            android:text="Check All Saved Alerts"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="30dp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="900dp"
            android:gravity="center_horizontal"
            app:layout_constraintTop_toTopOf="@+id/linearLayout">



            <ImageView
                android:id="@+id/imageView16"
                android:layout_width="160dp"
                android:layout_height="290dp"
                android:layout_marginTop="136dp"
                app:layout_constraintStart_toEndOf="@+id/imageView13"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/added_alerts" />


        </LinearLayout>

        <TextView
            android:id="@+id/textView20"
            android:layout_width="364dp"
            android:layout_height="94dp"
            android:layout_marginTop="1500dp"
            android:text="All your saved alerts will be displayed on the alerts section giving you option to turn it on or off and enabling the possibilities for simultaneous geofence monitoring"
            android:textAlignment="center"
            android:textColor="#808080"
            android:textSize="17dp"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />




        <TextView
            android:id="@+id/textView23"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="1620dp"
            android:text="Schedule Your Alerts"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="30dp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="1520dp"
            android:gravity="center_horizontal"
            app:layout_constraintTop_toTopOf="@+id/linearLayout">



            <ImageView
                android:id="@+id/imageView140"
                android:layout_width="160dp"
                android:layout_height="290dp"
                android:layout_marginTop="50dp"
                app:layout_constraintStart_toEndOf="@+id/imageView13"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/schedule_alert" />


            <ImageView
                android:id="@+id/imageView141"
                android:layout_width="160dp"
                android:layout_height="290dp"
                android:layout_marginTop="50dp"
                app:layout_constraintStart_toEndOf="@+id/imageView13"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/dashboard" />


        </LinearLayout>

        <TextView
            android:id="@+id/textView21"
            android:layout_width="364dp"
            android:layout_height="94dp"
            android:layout_marginTop="2050dp"
            android:text="You can Schedule your added alerts and later view both all the enabled alerts and scheduled alerts on your map dashboard "
            android:textAlignment="center"
            android:textColor="#808080"
            android:textSize="17dp"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />






    </androidx.constraintlayout.widget.ConstraintLayout>




    </ScrollView>

</androidx.drawerlayout.widget.DrawerLayout>
